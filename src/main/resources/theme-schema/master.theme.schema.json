{
  "version": "1.0",
  "definitions": {
    "color": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}([0-9a-fA-F]{2})?$",
      "title": "Color",
      "description": "Color in #RRGGBB format",
      "examples": [
        "#123abc"
      ]
    },
    "sticker": {
      "type": "string",
      "pattern": "^.+\\.png$",
      "title": "Sticker File Name",
      "description": "The name of the background image that is in the same directory as the definition",
      "default": "just_monika.png",
      "examples": [
        "just_monika.png"
      ]
    }
  },
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "id",
    "name",
    "displayName",
    "dark",
    "author",
    "stickers",
    "group"
  ],
  "properties": {
    "id": {
      "type": "string",
      "title": "Theme Id",
      "description": "Unique Identifier for the theme.",
      "default": "",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "examples": [
        "91415015-8fe3-48eb-9951-70a5cd6cbb7f",
        "a14733d6-8e15-4e75-b6b8-509f323e5b3b"
      ]
    },
    "name": {
      "type": "string",
      "title": "Theme name",
      "description": "Theme name",
      "default": "",
      "examples": [
        "My Brand New Theme"
      ]
    },
    "displayName": {
      "type": "string",
      "title": "Display name",
      "description": "The name used in various theme components such as the Status Bar",
      "default": "",
      "examples": [
        "Just Monika"
      ]
    },
    "dark": {
      "type": "boolean",
      "title": "Dark theme",
      "description": "If 'true' then Darcula theme will be used as the base for modification, otherwise Light theme will be used.",
      "default": false,
      "examples": [
        true
      ]
    },
    "author": {
      "type": "string",
      "title": "Theme author",
      "description": "The author of the theme",
      "default": "",
      "examples": [
        "Leroy Jenkins"
      ]
    },
    "group": {
      "type": "string",
      "title": "Theme Group",
      "description": "The group the theme belongs to",
      "default": "",
      "examples": [
        "Literature Club"
      ]
    },
    "stickers": {
      "type": "object",
      "required": [
        "default"
      ],
      "title": "Sticker",
      "description": "The image reference to the sticker for the bottom right hand corner.",
      "properties": {
        "default": {
          "$ref": "#/definitions/sticker"
        }      ,
        "secondary": {
          "$ref": "#/definitions/sticker"
        }
      }
    },
    "colors" : {
      "type": "object",
      "title": "Theme Color Palette",
      "description": "Define common colors here and use color names in 'ui' section instead of #rrggbb values",
      "required": [
        "caretRow",
        "baseIconColor",
        "ghostColor",
        "contrastColor",
        "nonProjectFileScopeColor",
        "secondaryBackground",
        "selectionForeground",
        "inactiveBackground",
        "inactiveBackgroundDarker",
        "headerColor",
        "baseBackground",
        "borderColor",
        "buttonColor",
        "selectionInactive",
        "tagColor",
        "selectionBackground",
        "buttonFont",
        "foregroundColor",
        "startColor",
        "highlightColor",
        "disabledColor",
        "accentColorTransparent",
        "accentColorLessTransparent",
        "accentColorMoreTransparent",
        "accentColor",
        "stopColor",
        "testScopeColor",
        "popupMask",
        "codeBlock",
        "textEditorBackground",
        "searchResultBackground",
        "classNameColor",
        "htmlTagColor",
        "stringColor",
        "keyColor",
        "keywordColor"
      ],
      "patternProperties": {
        "caretRow": {
          "$ref": "#/definitions/color"
        },
        "baseIconColor": {
          "$ref": "#/definitions/color"
        },
        "ghostColor": {
          "$ref": "#/definitions/color"
        },
        "contrastColor": {
          "$ref": "#/definitions/color"
        },
        "nonProjectFileScopeColor": {
          "$ref": "#/definitions/color"
        },
